{% extends 'base.html.twig' %}

{% block title %}Single index{% endblock %}

{% block body %}
    <h1>Single index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Artiste</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for single in singles %}
            <tr>
                <td>{{ single.id }}</td>
                <td>{{ single.name }}</td>
                <td>{{ single.artiste }}</td>
                <td>{{ single.time ? single.time|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('single_show', {'id': single.id}) }}">show</a>
                    <a href="{{ path('single_edit', {'id': single.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('single_new') }}">Create new</a>
{% endblock %}